<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_text_decript_fab"
    android:orientation="horizontal"
    tools:context="ims.vn.androiddms.MainActivity">
    <LinearLayout
        android:layout_marginLeft="@dimen/marginleftandright"
        android:gravity="center|left"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/textsize_visit_order"
            android:textColor="@color/text_decript_fab"
            android:id="@+id/txtKho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RadioGroup
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:id="@+id/rbcheck"
                android:buttonTint="@color/text_decript_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
