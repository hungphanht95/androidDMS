<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backround_login"
    android:orientation="vertical"
    tools:context="ims.vn.androiddms.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />
    <LinearLayout
        android:id="@+id/LayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/marginleftandright"
        android:layout_marginRight="@dimen/marginleftandright"
        android:layout_weight="1"
        android:background="@color/bg_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/login"-->
            <!--android:textColor="@color/textHearder"-->
            <!--android:textSize="@dimen/textsizetitlelogin" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/bottomedittext"
            android:layout_marginLeft="@dimen/leftandrightedittext"
            android:layout_marginRight="@dimen/leftandrightedittext"
            android:layout_weight="0.8"
            android:background="@color/bg_edittextlogin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/widthandheighticonsettingtitle"
                    android:layout_height="@dimen/widthandheighticonsettingtitle"
                    android:src="@drawable/ic_user" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/txtusername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tran"
                    android:hint="@string/username"
                    android:textColor="@color/text_decript_fab"
                    android:textColorHint="@color/text_decript_fab"
                    android:textSize="@dimen/textsizeedittextlogin" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/bottomedittext"
            android:layout_marginLeft="@dimen/leftandrightedittext"
            android:layout_marginRight="@dimen/leftandrightedittext"
            android:layout_weight="0.8"
            android:background="@color/bg_edittextlogin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/widthandheighticonsettingtitle"
                    android:layout_height="@dimen/widthandheighticonsettingtitle"
                    android:src="@drawable/ic_key" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/txtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tran"
                    android:hint="@string/password"
                    android:password="true"
                    android:textColor="@color/text_decript_fab"
                    android:textColorHint="@color/text_decript_fab"
                    android:textSize="@dimen/textsizeedittextlogin" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/leftandrightedittext"
            android:layout_marginRight="@dimen/leftandrightedittext"
            android:layout_weight="0.8"
            android:background="@color/xanhdam">

            <LinearLayout
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btnlogin"
                    android:textSize="@dimen/textsizebuttonlogin" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center">

            <!--<TextView-->
            <!--android:id="@+id/btnCreateAccount"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="@dimen/marginleftandrightfooter"-->
            <!--android:text="@string/create"-->
            <!--android:textColor="@color/text_decript_fab"-->
            <!--android:textSize="@dimen/textsizecreateaccount" />-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:clickable="true"-->
            <!--android:text="@string/anaccount"-->
            <!--android:textColor="@color/bg_list"-->
            <!--android:textSize="@dimen/textsizecreateaccount" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />
</LinearLayout>
